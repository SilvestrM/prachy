{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["webpack-env"],
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"src/views/Transactions.vue",
		"src/components/navigation/Menu.vue",
		"src/components/data/TransactionsTable.vue",
		"src/components/data/dialogs/EditTransactionDialog.vue",
		"src/components/data/dialogs/TransactionDialog.vue",
		"src/components/auth/SignIn.vue",
		"src/components/auth/AuthDialog.vue"
	],
	"exclude": ["node_modules"]
}
